{
  "name": "cluely-clone",
  "version": "1.0.0",
  "description": "Multi-provider AI interview assistant with support for Google Gemini (free), OpenAI, Grok, and Claude. Transparent overlay Electron app for live AI answers, hidden from dock and screen sharing.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.cluelyclone.clone",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] }
      ],
      "icon": "icon.icns",
      "darkModeSupport": true,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app requires microphone access to capture your voice.",
        "NSCameraUsageDescription": "This app requires screen recording access to capture your screen."
      }
    },
    "win": {
      "target": ["nsis"],
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] }
      ],
      "category": "Utility",
      "desktop": {
        "Name": "Cluely Clone",
        "Comment": "AI Interview Assistant",
        "Keywords": "ai,interview,assistant,overlay",
        "StartupWMClass": "cluely-clone"
      }
    },
    "files": [
      "**/*",
      "!favicon.png"
    ],
    "extraResources": [
      "favicon.png"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.6.0"
  }
} 